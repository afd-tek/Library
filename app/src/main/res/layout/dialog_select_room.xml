<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_dialog_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rb_dialog_room_all"
            android:text="Hepsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb_dialog_room_1"
            android:text="Salon A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb_dialog_room_2"
            android:text="Salon B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb_dialog_room_3"
            android:text="Salon C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb_dialog_room_4"
            android:text="Salon D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb_dialog_room_5"
            android:text="Salon E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>
        <RadioButton
            android:id="@+id/rb_dialog_room_6"
            android:text="Salon F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_dialog_room_submit"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_btn_dark"
        android:text="Kaydet"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />
</LinearLayout>